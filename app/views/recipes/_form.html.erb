<div class="container-fluid">
  <%= simple_form_for @recipe do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :title %><br /><br />
      <%= image_tag f.object.main_image unless f.object.main_image.blank? %><br /><br />
      <%= f.input :main_image, label: "Change Image" %>
      <%= f.input :default_servings, label: "Default Servings", collection: 1..99, input_html: { class: "default-servings" } %>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Ingredient</th>
          <th>Prep</th>
          <th class="amount">Amount</th>
          <th>Unit</th>
          <th class="amount">Amount 2</th>
          <th>Unit 2</th>
        </tr>
      </thead>
      <tbody class='fields'>
        <%= f.simple_fields_for :ingredients do |i| %>
          <%= render "ingredient", f: i%>
        <% end %>
      </tbody>
    </table>

    <div class='links'>
      <%= link_to_add_row('Add Ingredient', f, :ingredients, class: 'btn btn-primary')%>
    </div><br  /><br  />
    <div class="instructions-box">
      <p class="header">Instructions:</p>
      <%= f.input :description, label: false, input_html: { class: "text-box" } %><br />
    </div>
    <div class="notes-box">
      <p class="header">Notes:</p>
      <%= f.input :notes, label: false, input_html: { class: "text-box" } %><br />
    </div>
    <%= label_tag(:tags, 'Tags') %>
    <%= text_field_tag('tags', f.object.tags_full_list) %><br />

    <%= label_tag(:categories, 'Categories') %>
    <%= text_field_tag('categories', f.object.categories_full_list) %><br />

    <div class="form-actions">
      <%= f.submit %>
    </div>
    <br />
  <% end %>
</div>
