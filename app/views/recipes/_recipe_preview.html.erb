<div class='container'>
  <div class='row'>
    <% @recipe_count.times do |i| %>
      <% recipe = @recipes[i] %>
      <div class="col-6 col-lg-4 recipe-preview recipe-border d-flex">
        <div class='center-content text-center'>
          <%= link_to recipe do %>
            <div class="preview-link">
              <div class="preview-title"><%= recipe.title.titleize %></div>
              <div><%= image_tag(recipe.main_image.variant(resize_and_pad: [200, 150]), class: 'image-preview') unless recipe.main_image.blank? %></div>
            </div>
          <% end %>
          <div>
            <%= render partial: "recipes/recipe_info", locals: {recipe: recipe} %>
            <%= render partial: "recipes/recipe_rating", locals: {recipe: recipe} %>
          </div>
        <br />
        <br />
      </div>
    </div>
    <% end %>
  </div>
</div>