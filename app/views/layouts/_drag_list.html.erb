<div class='dragscroll drag-list-container hide-scroll'>
    <div style="width:<%= (list.length + 1) * 350 %>px">
      <% list.each do |recipe| %>
        <div class="drag-recipe-preview align-top">
          <%= link_to recipe do %>
            <div class=preview-link>
              <div class="preview-title"><%= recipe.title.titleize %></div>
              <div><%= image_tag(recipe.main_image.variant(resize_and_pad: [200, 200]), class: 'image-preview') unless recipe.main_image.blank? %></div>
            </div>
          <% end %>
          <div>
            <%= render partial: "recipes/recipe_info", locals: {recipe: recipe} %>
            <%= render partial: "recipes/recipe_rating", locals: {recipe: recipe} %>
          </div>
          <br />
          <br />
        </div>
      <% end %>
   </div>
</div>