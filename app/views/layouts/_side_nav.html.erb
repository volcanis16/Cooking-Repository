<div>
  <%= form_tag(search_path, :method => "get") do%>
    <%= search_field_tag :search, params[:search], data: {field: "search_field"} %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<div><strong><%= link_to "Categories:", categories_path %></strong></div>

<div>
  <ul>
    <% Category.all.each do |c| %>
      <li>
        <%= render "layouts/drop_option", v: c, type: "cat"%>
        <%= " [#{recipe_count(c, "categories")}]"%>
      </li>
    <% end %>
  </ul>
</div>
<br  />

<div><strong><%= link_to "Tags:", tags_path %></strong></div>

<div>
  <ul>
    <% Tag.all.each do |t| %>
      <li>
        <%= render "layouts/drop_option", v: t, type: "tag"%>
        <%= " [#{recipe_count(t, "tags")}]"%>
      </li>
    <% end %>
  </ul>
</div>